---
layout: layouts/base.njk
templateClass: post
---
  <h1>
    <span       style="view-transition-name: post-{{ page.fileSlug }}-emoji"
 class="emoji">{{ emoji }}</span><span       style="view-transition-name: post-{{ page.fileSlug }}-title"
>{{ title }}</span>
  </h1>
<div  class="post-metadata">
  <time      
  style="view-transition-name: post-{{ page.fileSlug }}-date"
 datetime="{{ page.date | htmlDateString }}">
    <em>{{ page.date | readableDate }}</em>
  </time>
  <ul>
    {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li >
        <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
        {%- if not loop.last %}{% endif %}
      </li>
    {%- endfor %}
  </ul>
</div>

<div class="flow">

  {{ content | safe }}

</flow>

{%- if collections.posts %}
  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
  {%- if nextPost or previousPost %}
    <hr>
    <ul>
      {%- if nextPost %}
        <li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
        </li>
      {% endif %}
      {%- if previousPost %}
        <li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
        </li>
      {% endif %}
    </ul>
  {%- endif %}
{%- endif %}