<h1>Notes</h1>
<p>Short-form thoughts, links, and updates.</p>

<div class="notes-timeline">
  {%- for note in collections.notes | reverse %}
  <article class="note-card h-entry">
    <time class="dt-published" datetime="{{ note.date | htmlDateString }}"> {{ note.date | readableDate }} </time>
    <div class="e-content flow">{{ note.templateContent | safe }}</div>
    <div class="note-card-footer">
      <a href="{{ note.url | url }}" class="u-url">Permalink</a>
      {% if note.data.mastodon_url %}
      <a href="{{ note.data.mastodon_url }}" rel="syndication">Mastodon</a>
      {% endif %} {% if note.data.bluesky_url %}
      <a href="{{ note.data.bluesky_url }}" rel="syndication">Bluesky</a>
      {% endif %}
    </div>
  </article>
  {%- endfor %}
</div>
