---json
{
  "permalink": "notes/feed.xml",
  "layout": false,
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Joe Hart's Notes",
    "subtitle": "Short-form thoughts, links, and updates.",
    "language": "en",
    "url": "https://www.joehart.co.uk/",
    "author": {
      "name": "Joe Hart"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ metadata.url }}">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.subtitle }}</subtitle>
  <link href="{{ permalink | url | absoluteUrl(metadata.url) }}" rel="self" />
  <link href="{{ metadata.url }}notes/" />
  <updated>{{ collections.notes | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ metadata.url }}notes/</id>
  <author>
    <name>{{ metadata.author.name }}</name>
  </author>
  {%- for note in collections.notes | reverse %}
  {%- set absoluteNoteUrl = note.url | absoluteUrl(metadata.url) %}
  <entry>
    <title>Note â€” {{ note.date | readableDate }}</title>
    <link href="{{ absoluteNoteUrl }}" />
    <updated>{{ note.date | dateToRfc3339 }}</updated>
    <id>{{ absoluteNoteUrl }}</id>
    <content type="html">{{ note.templateContent | htmlToAbsoluteUrls(absoluteNoteUrl) }}</content>
  </entry>
  {%- endfor %}
</feed>
